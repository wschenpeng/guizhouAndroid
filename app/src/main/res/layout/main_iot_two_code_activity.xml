<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:text="条形码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_two_code"
        android:layout_alignRight="@+id/btn_two_code"
        android:layout_alignEnd="@+id/btn_two_code"
        android:layout_marginTop="54dp"
        android:id="@+id/btn_one_code"
        android:onClick="onScanBarcode"
        />

    <Button
        android:text="二维码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:id="@+id/btn_two_code"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onScanQrcode"/>
</RelativeLayout>
