<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/identify_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/data_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="监测点："
            android:textColor="@color/identify_wordcolor"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L1"
        android:background="@color/identify_background"
        android:orientation="horizontal">

    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fengji"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1#风机"
            android:textSize="20sp"
            android:textColor="#000000"
            />
        <ImageView
            android:id="@+id/key_image_1"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_gk_off"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/key1"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fengji"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2#风机"
            android:textSize="20sp"
            android:textColor="#000000"
            />
        <ImageView
            android:id="@+id/key_image_2"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_gk_off"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/key2"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fengji"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="3#风机"
            android:textSize="20sp"
            android:textColor="#000000"
            />
        <ImageView
            android:id="@+id/key_image_3"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_gk_off"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/key3"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
