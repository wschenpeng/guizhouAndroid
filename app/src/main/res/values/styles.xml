<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- 标题样式. -->
    <style name="mainTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#33A1C9</item>
    </style>
    <!-- 标题样式. -->
    <style name="nomainTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!-- 选择菜单 -->
    <style name="choose">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#dcdcdc</item>
    </style>
    <!-- 控件填充父控件 -->
    <style name="fillstyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- 控件包裹父控件 -->
    <style name="wrapstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 高度40dp样式. -->
    <style name="fortydplayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <!-- 必填控件 -->
    <style name="required">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:text">*</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--数据展示表格父布局-->
    <style name="lineartext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#e8f6f1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--数据展示表格子布局-->
    <style name="textlableqx">
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666600</item>
    </style>


    <style name="lineForTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#31859c</item>
    </style>

    <style name="fullWidthAndHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--FAB子图标标题的style -->
    <style name="menu_sons_style">
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
